<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane fx:id="root" prefHeight="200" prefWidth="400" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23">

    <top>
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Elige tu nave" BorderPane.alignment="center" />
    </top>

    <center>
        <HBox alignment="center" spacing="20">
            <Button fx:id="leftButton" onAction="#onLeftButtonAction" text="&lt;" />
            <ImageView fx:id="shipImageView" fitHeight="120" fitWidth="100" preserveRatio="true" />
            <Button fx:id="rightButton" onAction="#onRightButtonAction" text="&gt;" />
        </HBox>
    </center>

    <bottom>
        <HBox alignment="center" spacing="10" style="-fx-padding: 10px;">
            <Button fx:id="cancelButton" onAction="#onCancelButtonAction" text="Cancelar" />
            <Button fx:id="confirmButton" onAction="#onConfirmButtonAction" text="Confirmar" />
        </HBox>
    </bottom>
</BorderPane>
